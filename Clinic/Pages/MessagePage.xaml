<Page x:Class="Clinic.Pages.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="alert_message" Grid.Row="0" Style="{StaticResource StandartTextBlock}" Margin="20" TextWrapping="Wrap" TextAlignment="Left"/>
        <Button Grid.Row="1" Style="{StaticResource StandartButton}" Content="ОК" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Width="64" Height="30" Click="Button_Click"/>
    </Grid>
</Page>
